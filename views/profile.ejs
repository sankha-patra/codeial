   <div class="profileclass">
   <img class ="profilepic" src="<%=profile_user.avatar%>"  width="100">
   <p style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
    Name:<%= profile_user.name %>
   </p>
   



        <% if(user.id == profile_user.id) {%>
           
           
            <!-- if user matches show the form -->
            <!-- to update user name or email -->
            <br><br>
            <p style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
                Wanna update username or password ?
            </p>
            <br>
            
            <div class="form_Control" style="display:inline-block;">
            <form class="form_Control" action="/users/update/<%= profile_user.id %>" enctype="multipart/form-data" method="POST">
                <input type="text" name="name" placeholder="User" value="<%=profile_user.name%>" required>
                <br>
                <input type="email" name="email" placeholder="Email" value="<%=profile_user.email%>" required>
                <br>
                <input type="file" name="avatar" placeholder="Profile Picture">
            </div>
            <br>
            <br>
                <input class="button" type="submit" value="Update">
                <br>
            </form>
        
            <%}else{%>
                <!-- show only profile info -->
                <br><br>
                <p style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;" >
                 User : <%= profile_user.name %></p>
                <p style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
                Email : <%= profile_user.email %></p>

                <%} %>
            </div>
        </div>
    </div>