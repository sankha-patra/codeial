        <section id="feed-posts">
          <br><br><br>
          <h4>Posts</h4>
          
          <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content"  cols="25" rows="4" placeholder="type here.." required></textarea>
            <br>
          <input type="submit" class="hero__container--btn" value="Post">
          </form>
          <div id="posts-list-container">
            <ul>
              <% for(post of posts){%>
                <li>
                  <br>
                  <p>
                   -><%= post.content %> :<small><%= post.user.name %></small>
